<div class="flex justify-center mt-5">
  <div class="w-full">
    <%= turbo_frame_tag "devise" do %>
      <div data-testid="forgot-password-modal">
        <h3 class="text-center text-lg font-medium mt-5">ลืมรหัสผ่าน</h3>

        <p class="mt-10">กรุณากรอกอีเมลเพื่อรับลิงก์ตั้งรหัสผ่านใหม่</p>
        
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name, script_name: Rails.application.credentials.dig(:turbo, :root) || "/"), html: { method: :post, class: "contents space-y-2" }) do |f| %>

          <div class="form-inputs">
            <%= f.input :email,
                        label: "อีเมล",
                        required: false,
                        autofocus: true,
                        placeholder: "กรอกอีเมลของคุณ",
                        input_html: { autocomplete: "email", class: "border border-gray-300 rounded-lg p-3 text-md focus:outline-none focus:ring-2 focus:ring-primary w-full" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "ส่งอีเมล", class: "btn btn-primary btn-wide mt-4 max-w-full" %>
          </div>

          <div class="flex flex-row justify-center font-extralight gap-6 mt-6">
            <%= link_to "เข้าสู่ระบบ", new_session_path(resource_name), data: { turbo_frame: "devise" }, class: "text-primary" %>
            <%= link_to "สร้างบัญชีผู้ใช้", new_registration_path(resource_name), data: { turbo_frame: "devise" }, class: "text-primary" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>