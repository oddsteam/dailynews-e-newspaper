<div class="flex justify-center mt-5">
  <div class="w-95">
    <%= turbo_frame_tag "devise" do %>
      <h3 class="text-center text-lg font-medium mt-5">Reset your password</h3>

      <p class="mt-10">Please enter your email below. We'll email you a link to reset your password</p>
      
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "contents space-y-2" }) do |f| %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: "Enter your email",
                      input_html: { autocomplete: "email", class: "border border-gray-300 rounded-lg p-3 text-md focus:outline-none focus:ring-2 focus:ring-blue-500 w-full" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "RESET PASSWORD", class: "btn btn-primary btn-wide mt-4 max-w-full" %>
        </div>

        <div class="flex flex-row justify-center font-extralight gap-6 mt-6">
          <%= link_to "Sign in", new_session_path(resource_name), data: { turbo_frame: "devise" }, class: "text-blue-500" %>
          <%= link_to "Sign up", new_registration_path(resource_name), data: { turbo_frame: "devise" }, class: "text-blue-500" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>