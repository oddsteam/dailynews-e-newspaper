<div class="w-[calc(33.33%-30px)] float-left m-[0_15px_30px] md:w-[calc(50%-30px)]
    sm:w-[calc(50%-15px)] sm:m-[0_7px_15px] col:w-[calc(100%-7px)] col:float-none group">
  <% if book.respond_to?(:image_url) && book.image_url.present? %>
    <%= image_tag book.image_url, alt: book.title, class: "w-full" %>
  <% else %>
    <div class="w-full h-[300px] bg-gray-200 flex items-center justify-center">
      <span class="text-gray-400 text-xl"><i class="ti-book"></i></span>
    </div>
  <% end %>
  <div class="bg-[#f7f7f7] text-center p-[35px_15px] group">
    <h3 class="text-[20px] mb-[10px] font-bold md:text-[16px] group">
      <%= link_to book.title, book_path(book), class: "text-[#0a272c] group-hover:text-[#3756f7] transition-all duration-300" %>
    </h3>
    <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= book.description %></p>
    <% if book.respond_to?(:price) %>
      <% if book.respond_to?(:original_price) && book.original_price.present? %>
        <del class="text-[#0a272c]">$<%= number_with_precision(book.original_price, precision: 2) %></del>
        <span class="inline-block pl-[20px]">$<%= number_with_precision(book.price, precision: 2) %></span>
      <% else %>
        <span>$<%= number_with_precision(book.price, precision: 2) %></span>
      <% end %>
    <% end %>
    <div class="mt-[20px] group">
      <%= link_to book_path(book), class: "font-base-font text-[15px] font-semibold text-[#3756f7] p-[8px_20px]
          border-[2px] border-[#3756f7] inline-block rounded-[50px] sm:text-[12px]
          sm:p-[6px_18px] transition-all duration-300 group-hover:bg-[#3756f7]
          group-hover:text-white" do %>
        View Details
        <i class="ti-arrow-right text-[15px] inline-block pl-[5px]"></i>
      <% end %>
    </div>
  </div>
</div>
